<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    android:padding="5dp"
    tools:context=".MainActivity">
    <!-- 로그인 버튼 레이아웃 -->
    <LinearLayout
        android:id="@+id/googleLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:background="@drawable/google_button">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/google_logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="구글 로그인"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/googleLabel"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/kakaoLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:background="@drawable/kakao_button">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/kakao_logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="카카오 로그인"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/kakaoLabel"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/naverLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:background="@drawable/naver_button">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/naver_logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="네이버 로그인"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <!-- 로그아웃 버튼 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/googleLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="구글 로그아웃"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/kakaoLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="카카오 로그아웃"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/naverLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:enabled="false"
            android:gravity="center"
            android:text="네이버 로그아웃"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>